<core:View 
	controllerName="Vinca.controller.Login"	
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:suite="sap.suite.ui.commons"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	displayBlock="true"
	>
			<Page id="detail" title="Vinca" showHeader="true" class="SplitContainer" enableScrolling="false"  > 
			<headerContent>
			<Button icon="sap-icon://menu" press="handlePressOpenMenu"/>
			</headerContent>	
				<content>
							<VBox fitContainer="true"  alignItems="Center" class="sapUiLargeMarginTop">
							<items>
							<Label text="User credentials"/>
							<Input 
								placeholder="Benutzername"
								value="{/username}"
								valueLiveUpdate="true"/>
							<Input placeholder="Passwort" type="Password" value="{/password}"/>
							</items>
							<Button id="login" width="12rem" text="Login" type="Emphasized" press="Onpress1"/> 
							</VBox>
						</content>
			</Page>
</core:View>