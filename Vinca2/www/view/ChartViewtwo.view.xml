						height="100%"
						width="100%"
						horizontal="true"
						vertical="true"
						focusable="true"> 
						<suite:ChartContainer 
							id="chartContainer"
							class="chartContainercss"
							showFullScreen="false"
						    showPersonalization="false"
							autoAdjustHeight="true"
							showLegend="false"
							showLegendButton="false"
							showZoom="false"
							>

							 <suite:content>
									<suite:ChartContainerContent
										icon="sap-icon://line-chart"
										title="Line Chart">
									<suite:content>
										
										<viz:VizFrame 
											xmlns="sap.viz" 
											id="idcolumn" 
											height="250px" 
			                    			width="30px">
										</viz:VizFrame>
									</suite:content>
									</suite:ChartContainerContent>

							</suite:content>
						</suite:ChartContainer>
