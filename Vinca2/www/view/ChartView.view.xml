							<SegmentedButtonItem text="Jahr" key="year" />
							<SegmentedButtonItem text="Monat" key="month"/>
							<SegmentedButtonItem text="Tag" key="day"/>
						</items>
					</SegmentedButton>
				</Toolbar>

				<content>
					<ScrollContainer
