			<Page id="detail"  showHeader="false" class="SplitContainer" enableScrolling="false" > 

				<subHeader>
					<Toolbar>
						<DatePicker id="idDatePicker" change="onChangeDate" valueFormat="dd.MM.yyyy" displayFormat="dd.MM.yyyy" placeholder="DD.MM.YYYY"/>
					</Toolbar>
				</subHeader>
				<Toolbar>	
					<SegmentedButton id="sgtbtn" selectedKey="year" select="OnHandleSwitchTab">
