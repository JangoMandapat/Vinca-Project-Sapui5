<core:View 
	controllerName="Vinca.controller.Login"	
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:suite="sap.suite.ui.commons"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	displayBlock="true"
	>
			<Page id="detail" title="" showHeader="true" class="SplitContainer" enableScrolling="false"  > 
			<headerContent>
			
			</headerContent>	
				<content>
							<VBox fitContainer="true" justifyContent="Center" alignItems="Center">
							<items>
							<Label text="User credentials"/>
							<Input 
								placeholder="User Name"
								value="{/username}"
								valueLiveUpdate="true"/>
							<Input placeholder="Password" type="Password" value="{/password}"/>
							</items>
							<Button id="login" width="12rem" text="Login" type="Emphasized" press="Onpress1"/> 
							</VBox>
						</content>
			</Page>
</core:View>